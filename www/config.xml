<?xml version='1.0' encoding='utf-8'?>
<widget id="io.musa.snowball" version="0.0.20141027_1016" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>moBay</name>
    <description>
      Project to show real time matrix in Hello World Cafe.
    </description>
    <author email="mobay-info@qq.com" href="http://hwcafe.mybluemix.net">
      Hai Liang Wang, Jian Fei Zhao, Kang Xin Yang
    </author>
    <!-- LOG LEVEL FOR NATIVE CODE -->
    <log level="WARN"/>
    <content src="home.html" />
    <access origin="*" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="true" /> 
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <!-- http://stackoverflow.com/questions/21896014/phonegap-3-3-hidekeyboardformaccessorybar-not-working -->
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
    <feature name="Keyboard">
        <param name="ios-package" value="CDVKeyboard" onload="true" />
    </feature>
    <!-- ******************************************************* -->
    <!--                  moBay config start                 -->
    <!-- ******************************************************* -->
    <mobay name="host" value="hwcafe.mybluemix.net" />
    <mobay name="ssehost" value="hwcafesse.mybluemix.net" />
    <mobay name="path" value="/mobile/auth/linkedin" />
    <mobay name="pushAppId" value="a87432fd-2d2e-43d4-91c9-0832af4d4aec" />
    <mobay name="pushAppRoute" value="hwcafe.mybluemix.net" />
    <mobay name="pushAppSecret" value="049180170bdc55b6428f65f96f80518b37296000" />
    <!-- console log level -->
    <!-- https://code.google.com/p/console-js/ -->
    <!-- "log"|"debug"|"info"|"warn"|"error"|on"|"off" -->
    <mobay name="console" value="debug" />
    <!-- enable/disable weinre debugging -->
    <mobay name="weinreDebug" value="false" />
    <!-- weinre server url -->
    <mobay name="weinreServer" value="http://192.168.2.101:9088/target/target-script-min.js#musa" />
    <!-- ******************************************************* -->
    <!--                  moBay config end                   -->
    <!-- ******************************************************* -->

</widget>
